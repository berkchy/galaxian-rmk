{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/game.html" },
    { "source": "/api/socket", "destination": "/api/socket" }
  ],
  "headers": [
    {
      "source": "/api/socket",
      "headers": [
        { "key": "Connection", "value": "Upgrade" },
        { "key": "Upgrade", "value": "websocket" }
      ]
    }
  ]
}
